<div class="container col-8">
  {{!-- dropdown --}}
  <div class="dropdown row mt-3">
    <button class="col-8 btn btn-outline-warning dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
      aria-expanded="false">
      {{#if sort}}
      {{ sort }}
      {{else}}
      請選擇類別
      {{/if}}
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      {{#each categories}}
      <li><a class="dropdown-item" href="/sort/{{this.name}}">{{this.name}}</a></li>
      {{/each}}
    </ul>
  </div>
  
  {{!-- totalAmount --}}
  <div class="row mt-4">
    <div class="col-8">
      <h4>總金額：</h4>
      <div class="d-flex justify-content-end ">
        <h1>{{totalAmount}}</h1>
      </div>
    </div>
  </div>

  {{!-- record --}}
  {{#each renderRecords }}
    <div class="row mt-2">
    <div class="col-8">
      <div class="row">
        <div class="col-2 d-flex align-items-center">
          <i class="{{this.icon}} fa-2x"></i>
        </div>
        <div class="col-8">
          <div class="col">{{this.name}}</div>
          <div class="col date-text">{{this.date}}</div>
        </div>
        <div class="col-2 d-flex align-items-center">
          <div class="col">{{this.amount}}</div>
        </div>
      </div>
    </div>
    <div class="col-4 d-flex justify-content-center">
      <div class="btn-group mx-lg-2" role="group" aria-label="Basic outlined example">
        <a href="/records/{{this._id}}/edit" type="button" class="btn btn-primary">編輯</a>
      </div>
      <form "/records/{{this._id}}/?_method=delete" method="post">
        <div class="btn-group mx-lg-2" role="group" aria-label="Basic outlined example">
          <a href="/records/delete" type="button" class="btn btn-danger">刪除</a>
        </div>
      </form>
    </div>
  </div>
  {{/each}}
</div>