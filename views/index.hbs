<div class="container col-8">
  {{!-- select --}}
  <div class="row">
    <div class="col-8">
      <form action="/">
        <select class="form-select" aria-label="Default select example" oninput="submit()">
          <option selected>所有類別</option>
          <option href="/sort/home" value="1">家居物業</option>
          <option href="/sort/transport" value="2">交通出行</option>
          <option href="/sort/food" value="3">餐飲食品</option>
          <option href="/sort/other" value="4">其他</option>
        </select>
      </form>
    </div>
  </div>

  {{!-- dropdown --}}
  <div class="dropdown row mt-3">
    <button class="col-8 btn btn-outline-warning dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
      aria-expanded="false">
      所有類別
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      <li><a class="dropdown-item" href="/sort/home">家居物業</a></li>
      <li><a class="dropdown-item" href="/sort/transport">交通出行</a></li>
      <li><a class="dropdown-item" href="/sort/food">餐飲食品</a></li>
      <li><a class="dropdown-item" href="/sort/other">其他</a></li>
    </ul>
  </div>
  
  {{!-- totalAmount --}}
  <div class="row mt-4">
    <div class="col-8">
      <h4>總金額：</h4>
      <div class="d-flex justify-content-end ">
        <h1>111111</h1>
      </div>
    </div>
  </div>

  {{!-- record --}}
  {{#each renderRecords }}
    <div class="row mt-2">
    <div class="col-8">
      <div class="row">
        <div class="col-2 d-flex align-items-center">
          <i class="{{this.icon}} fa-2x"></i>
        </div>
        <div class="col-8">
          <div class="col">{{this.name}}</div>
          <div class="col date-text">{{this.date}}</div>
        </div>
        <div class="col-2 d-flex align-items-center">
          <div class="col">{{this.amount}}</div>
        </div>
      </div>
    </div>
    <div class="col-4 d-flex justify-content-center">
      <div class="btn-group mx-lg-2" role="group" aria-label="Basic outlined example">
        <a type="button" class="btn btn-primary">編輯</a>
      </div>
      <div class="btn-group mx-lg-2" role="group" aria-label="Basic outlined example">
        <a type="button" class="btn btn-danger">刪除</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>