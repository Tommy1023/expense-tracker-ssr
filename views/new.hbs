<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="row">
        <p class="col-4 d-flex justify-content-center">*為必填欄位</p>
        <h3 class="col-6 d-flex justify-content-center">請輸入你的支出</h3>
      </div>
      <form action="/restaurants" method="POST">
        <div class="row my-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="name" class="form-label">名稱*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <input type="text" class="form-control" id="name" name="name" placeholder="必填" required="true">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="date" class="form-label">日期*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <input type="date" class="form-control" id="date" name="date" placeholder="必填" required='true'>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="category" class="form-label">類別*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <input type="text" class="form-control" id="category" name="category" placeholder="Select" list="optionList"
              required='true'>
            <datalist id="optionList">
              <option>家居物業</option>
              <option>交通出行</option>
              <option>餐飲食品</option>
              <option>其他</option>
            </datalist>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="count" class="form-label">金額*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <input type="number" class="form-control" id="count" name="count" placeholder="必填" required='true'>
          </div>
        </div>

        <div class="row justify-content-center">
          <button type="submit" class="col-4 btn btn-primary">新增支出</button>
        </div>
      </form>
    </div>
  </div>
</div>