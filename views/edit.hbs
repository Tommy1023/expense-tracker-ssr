<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="row">
        <p class="col-4 d-flex justify-content-center">*為必填欄位</p>
        <h3 class="col-6 d-flex justify-content-center">請修改你的支出</h3>
      </div>
      <form action="/records/{{ record._id }}?_method=put" method="POST">
        <div class="row my-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="name" class="form-label">名稱*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <input type="text" class="form-control" id="name" name="name" placeholder="必填" value="{{ record.name }}" required="true">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="date" class="form-label">日期*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <input type="date" class="form-control" id="date" name="date" placeholder="必填" value="{{ record.date }}" required='true'>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="category" class="form-label">類別*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <select class="form-select" aria-label="Default select example" name="category" required>
              <option selected>{{ categoryName }}</option>
              {{#each categories}}
              <option >{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-4 d-flex justify-content-center">
            <label for="amount" class="form-label">金額*：</label>
          </div>
          <div class="col-6 d-flex justify-content-center">
            <input type="number" class="form-control" id="amount" name="amount" placeholder="必填" value="{{ record.amount }}" required='true'>
          </div>
        </div>

        <div class="row justify-content-center">
          <button type="submit" class="col-4 btn btn-primary">修改完成</button>
        </div>
      </form>
    </div>
  </div>
</div>